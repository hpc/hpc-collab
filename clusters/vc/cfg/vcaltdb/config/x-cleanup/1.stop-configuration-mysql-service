#!/bin/bash

## $Header: $
## Source:
## @file vcdb/config/x-cleanup/2.stop-configuration-mysqld-service

VCLOAD=../../../provision/loader/shload.sh

if [ ! -f "${VCLOAD}" ] ; then
  echo "${0}: missing: ${VCLOAD}"
  exit 99
fi
source ${VCLOAD}

# if we're given an argument, append test output to it
declare -x OUT=${1:-""}

if [ -n "${OUT}" ] ; then
  touch ${OUT} || exit 1
  exec > >(tee -a "${OUT}") 2>&1
fi

Rc ErrExit ${EX_SOFTWARE} "systemctl stop mysqld"
isinactive=$(systemctl status mysqld | grep 'Active: ' | awk '{print $2}')
if [ "${isinactive}" != "inactive" ] ; then
  ErrExit ${EX_SOFTWARE} "mysqld is not inactive: \"${isinactive}\""
fi

trap '' 0
exit ${EX_OK}
