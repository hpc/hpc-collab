#!/bin/bash

## $Header: $
## Source:
## @file .../requires/vcfs/2.socket-NTP

VCLOAD=../../../provision/loader/shload.sh

if [ ! -f "${VCLOAD}" ] ; then
  echo "${0}: missing: ${VCLOAD}"
  exit 99
fi
source ${VCLOAD}

# if we're given an argument, append test output to it
declare -x OUT=${1:-""}

if [ -n "${OUT}" ] ; then
  touch ${OUT} || exit 1
  exec > >(tee -a "${OUT}") 2>&1
fi
SetFlags >/dev/null 2>&1

Rc ErrExit 2  "systemctl status chronyd"

trap '' 0
exit ${EX_OK}
